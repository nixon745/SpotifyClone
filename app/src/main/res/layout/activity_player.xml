<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <!-- כפתור חזרה -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:tint="#FFFFFF"
        android:contentDescription="חזרה" />

    <!-- תמונת האלבום -->
    <androidx.cardview.widget.CardView
        android:id="@+id/albumCoverCard"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnBack"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/albumCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="תמונת אלבום" />

    </androidx.cardview.widget.CardView>

    <!-- שם האלבום -->
    <TextView
        android:id="@+id/albumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/albumCoverCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="שם האלבום"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- שם האמן -->
    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/albumTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Kanye West"
        android:textColor="#B3B3B3"
        android:textSize="16sp" />

    <!-- SeekBar -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artistName"
        android:layout_marginTop="32dp"
        android:progressTint="#1DB954"
        android:thumbTint="#FFFFFF" />

    <!-- זמן נוכחי וזמן כולל -->
    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0:00"
            android:textColor="#B3B3B3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="3:45"
            android:textColor="#B3B3B3"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- כפתורי שליטה -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeLayout"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- כפתור רנדומלי -->
        <ImageButton
            android:id="@+id/btnShuffle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_shuffle"
            android:tint="#B3B3B3"
            android:contentDescription="ערבוב" />

        <!-- כפתור הקודם -->
        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_previous"
            android:tint="#FFFFFF"
            android:contentDescription="הקודם" />

        <!-- כפתור Play/Pause -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_play"
            android:tint="#121212"
            android:contentDescription="נגן/עצור" />

        <!-- כפתור הבא -->
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_next"
            android:tint="#FFFFFF"
            android:contentDescription="הבא" />

        <!-- כפתור חזרה -->
        <ImageButton
            android:id="@+id/btnRepeat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_repeat"
            android:tint="#B3B3B3"
            android:contentDescription="חזרה" />

    </LinearLayout>

</RelativeLayout>